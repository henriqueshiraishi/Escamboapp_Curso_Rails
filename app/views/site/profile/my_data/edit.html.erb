<%= content_for :javascripts do %>
  <%= javascript_include_tag 'site/profile/ads' %>
<% end %>

<h1><%= t('message.edit_profile_member') %></h1>

  <% if @profile_member.errors.any? %>
      <div class="alert alert-warning alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <ul>
              <% @profile_member.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
          </ul>
       </div>
  <% end %>

<%= form_for(@profile_member, url: site_profile_my_datum_path(@profile_member)) do |f| %>

  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, class:"form-control", placeholder:"#{t('placeholder.first_name')}" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-6">
      <div class="form-group">
        <%= f.label :second_name %>
        <%= f.text_field :second_name, class:"form-control", placeholder:"#{t('placeholder.second_name')}" %>
      </div>
    </div>
  </div>
    <div class="row">
      <div class="col-xs-3">
        <div class="form-group">
          <%= f.label :birthdate %>
          <%= f.text_field :birthdate, class:"form-control datepicker", value: (l(@profile_member.birthdate) unless @profile_member.birthdate.blank?) %>
        </div>
      </div>
    </div>

  <%= submit_tag "#{t('buttons.send')}", class:"btn btn-default" %>
<% end %>
